
@{
    ViewData["Title"] = "Charger son image";
}

<h2>Charger son image</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="UploadImage" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" id="userId" name="userId" value="@ViewData["ApplicationUserID"]"/>
           

            @*Pour l image*@
            <div class="form-group">
                <label class="control-label">Avatar</label><br />
                 <input type="file" name="user_image" id="user_image" />
             </div>

            <div class="form-group">                
                <input type="submit" value="Charger" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="MonCompte/?userId=@ViewData["ApplicationUserID"]">Mon compte</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}